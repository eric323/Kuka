<apex:page showHeader="false" standardStylesheets="false" controller="CommunitiesCheckEmailController" title="{!$Label.site.forgot_password_confirmation}">
<html>
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>KUKA Change Password</title>

<apex:stylesheet value="{!URLFOR($Resource.KUKA_Resources,'KUKA_Resources/css/main.css' )}"/>
<link rel="icon" href="{!URLFOR($Resource.KUKA_Images, 'Images/favicon.ico')}"/>

<apex:stylesheet value="{!$Resource.KUKA_Images}"/>
<apex:stylesheet value="{!$Resource.KUKA_BG_Images}"/>
<apex:stylesheet value="{!$Resource.KUKA_UserReg}"/>
<link rel="icon" href="https://static.kuka.com/salesforce/SsoPageResources/-/media/kuka-corporate/images/home/logos/kuka-favicon-16.ico"/>

 <style>
 
  #footer .container:after {
        background-image: url('{!URLFOR($Resource.KUKA_Images, 'images/img-circle-large.png')}');
        top: 25%;
        width: 150px;
        height: 150px;
    }
      .main__content--password-sent {
  background-image: url('{!URLFOR($Resource.KUKA_UserReg, 'KUKA_UserReg/images/kuka_lost_password_sent.png')}');
  background-position: center;
  background-size: cover;
}

.action-link-wrap {
  text-align: center;
  padding: 1rem 0 0;
  margin-bottom: -1rem;
}

.action-link {
  color: #ff6000;
  font-size: 1.15rem;
}

.input-holder {
  position: relative;
  margin-bottom: 2rem;
}

.error-message {
  text-align: right;
  display: block;
  color: #ff6000;
  padding-top: .25rem;
}

.error-icon {
  background: transparent;
  color: #ff5800;
  padding: 0;
  font-size: 2rem;
  height: 1.5rem;
  line-height: 1.25rem;
  position: absolute;
  right: .75rem;
  top: .75rem;
}

.submit-button {
  display: block;
  width: 100%;
  padding: 1rem 0 1.1rem;
  margin-top: 1rem;
  font-size: 1.35rem;
  line-height: 1.5rem;
  -webkit-appearance: none;
  border-radius: 0;
  border: none;
  cursor: pointer;
  background: #ff6000;
  color: #fff;
  text-align: center;
}

hr {
  width: 40%;
  margin: 1.85rem auto 1.75rem;
  background: #d4d5d7;
  border: none;
  height: 1px;
}
 </style>
</head>
<body>
    <div id="wrapper">
        <header id="header">
            <div class="logo">
                <div id="headerimage">
                    <img src="{!URLFOR($Resource.KUKA_Images, 'images/logo.png')}" class="headerkuka" alt="KUKA"
                         width="125" height="21" style="margin-right: 100px" />
                </div>
            </div>
        </header>
        <main class="main" role="main">
      <div class="main__content main__content--password-sent">
        <section class="grid">
          <div class="grid__cell grid__cell--center u-2/3">
            <div class="section-login">
              <div class="section-login__header">
                <h2 class="section-login__headline">Check Your Email</h2>
              </div>
              <apex:form id="theForm" styleClass="lostpassword-form">
              <div class="section-login__content" role="main">
                <p class="section-login__subheadline">Check the email  account associated with your user name for instructions on resetting your password.</p>
                <hr/>
                <p class="section-login__subheadline">Remember to look in your spam folder, where automated messages sometimes filter. If you still canâ€™t log in, please email us at <a href="mailto:support.ecommerce@kuka.com">support.ecommerce@kuka.com</a>.</p>
             
                 <!--    <a class="submit-button"  href="{!redirecturl}">Back to Login</a>  
                <a class="submit-button" onClick="window.top.close();">Close</a>-->
                   <apex:commandbutton styleClass="submit-button" action="{!getSourceSystem}" value="{!$Label.CommunitySelfReg_ButtonTandDClose}" id="submit"  />                 
              
              </div>
               </apex:form>
            </div>
           
          </div>
        </section>
      </div>
    </main>
        <footer id="footer">
      <div class="container">
        <ul class="linkholder socials">
          <li><a href="https://www.youtube.com/c/kukarobotgroup" target="_blank"><i class="icon-youtube"></i></a></li>
          <li><a href="https://www.linkedin.com/company/kuka-robotics" target="_blank"><i class="icon-linkedin"></i></a></li>
          <li><a href="https://www.facebook.com/kuka.systems/" target="_blank"><i class="icon-facebook"></i></a></li>
          <li><a href="https://twitter.com/KUKA_RoboticsEN" target="_blank"><i class="icon-twitter"></i></a></li>
        </ul>
        <ul class="linkholder">
          <li>&copy; <a href="https://kuka.com">KUKA AG</a></li>
          <li><a href="https://www.kuka.com/en-de/imprint/">Imprint</a></li>
          <li><a href="https://www.kuka.com/en-de/privacy/">Privacy</a></li>
        </ul>
        <a href="#" class="lang">English - United States</a>
      </div>
    </footer>
    <div id="languswitch" class="modal" style="display: block; visibility:hidden">
        <div class="slds" style="color: #706f6f !important;">
            <div class="slds-modal__container" style="width: 25% !important;">
                <div class="slds-modal__header" style="background-color: #F7F7F7;">
                    <span class="slds-text-heading--medium">Language</span>
                    <button aria-hidden="true" class="slds-button slds-button--neutral modal-cancel" id="languageCancelButton" type="button" onclick="hidelangu()">X</button>
                </div>
                <div class="slds-modal__content"><div>
                        <ul>
                            <li><a href="../en-EN/">English</a></li>
                            <li><a href="../de-DE/">German</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="filter" style="visibility:hidden" class="fullscreenfilter"></div>
    </div>
</body>
</html>
  
</apex:page>